<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.aoji.ihero.Fragments.DetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/hero_bg_gradient">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SUPERMAN"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:textColor="#FAC740"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView2"
                android:src="@drawable/bigsupermanlogo"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Backstory"
                android:id="@+id/textView4"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="55dp"
                android:textColor="#FFF"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="You will need to do this using Canvas and coordinate point systems where you lay out the lines based on the other UI so it scales on all screen sizes. You do NOT want to use images for this."
                android:id="@+id/textView3"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="#FFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="PRIMARY POWER"
                android:id="@+id/textView5"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textColor="#FFF"/>

            <Button
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:text="FLIGHT"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/hero_button"
                android:textColor="#FAC740"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/supermancrest"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="SECONDARY POWER"
                android:id="@+id/textView6"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="#FFF"/>

            <Button
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:text="SUPER STRENGHT"
                android:id="@+id/button2"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/hero_button"
                android:textColor="#FAC740"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/superstrength"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <Button
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:text="START OVER"
                android:id="@+id/startOverBtn"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/hero_solid_button"
                android:textColor="#10161D"
                android:layout_marginTop="25dp"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:backgroundTint="#FAC740"/>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>
